<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/choiceImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_launcher_foreground" />

            <TextView
                android:id="@+id/choiceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choice Name"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/choiceDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/choiceName"
                android:layout_marginTop="10dp"
                android:text="Choice Description"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/choicePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/choiceDescription"
                android:layout_marginTop="10dp"
                android:text="Choice Price"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>